{% extends 'base.html.twig' %}

{% block body %}
<h2 class="py-5"> Nos Films</h2>

<div class="count">
    Nombre de Films : {{ pagination.getTotalItemCount }}
</div>


 <div class="d-flex flex-wrap justify-content-between">
    {% for movie in pagination %}  
   
       <div>
       <a href="{{ path('front_movie', {'id': movie.id}) }}" >
        <img src="{{asset('images/movies/' ~ movie.imageName) | imagine_filter('poster')}}" alt="">
        <p> {{ movie.title }} </p>
        </a>
         </div>
       {% endfor %}
    </div>

    
 <div class="navigation">

         {{ knp_pagination_render(pagination) }}
     
    </div>

{% endblock %}